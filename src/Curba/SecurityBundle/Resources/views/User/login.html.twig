{% extends "CurbaGardeningBundle::layout.html.twig" %}

{% block title %}Login{% endblock %}
{% block pageid 'user' %}

{% block body_content %}
<h1>Accede a tu cuenta</h1>

{% if error %}
    <div class="error">{{ error.message }}</div>
{% endif %}

<form action="{{ path("login_check") }}" method="post" id="login">
    <div>
        <label for="username">Email</label>
        <input type="text" id="username" name="_username" value="{{ last_username }}" />
    </div>

    <div>
        <label for="password">Contraseña</label>
        <input type="password" id="password" name="_password" />
    </div>

    <input type="submit" class="symfony-button-grey" value="LOGIN" />
</form>
{% endblock %}

{% block body_lateral %}
<div class="usuario">
<p>¿No estás registrado? <a href="{{ path('register') }}">Registrate!</a></p>
</div>
{% endblock %}