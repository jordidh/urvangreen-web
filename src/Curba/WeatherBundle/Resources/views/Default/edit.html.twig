{% extends "CurbaWeatherBundle::layout.html.twig" %}

{% block body %}
    <h1>Station edit</h1>

    <form action="{{ path('station_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
        {{ form_widget(edit_form) }}
        <p>NOTE: The rain correction is a multiplier the other corrections add a value</p>
        <p>
            <button type="submit">Edit</button>
        </p>
    </form>

    <ul class="record_actions">
        <li>
            <a href="{{ path('main') }}">
                Back to the list
            </a>
        </li>
        <li>
            <form action="{{ path('station_delete', { 'id': entity.id }) }}" method="post">
                {{ form_widget(delete_form) }}
                <button type="submit">Delete</button>
            </form>
        </li>
    </ul>
{% endblock %}